<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

<style type="text/css">
  #header {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    background: rgba(255,255,255,.8);
    box-shadow: 0px 1px 3px rgba(0,0,0,.5);
    z-index: 3;
  }
  h1 {
    margin: 0px;
    font-size: 18px;
    line-height: 2em;
  }
  .menu-item {
    padding: 0px;
    text-align: center;
  }
  .menu-link {
    padding: 8px 0px;
    display: block;
    cursor: pointer;
    transition: all .5s 0s ease;
  }
  .menu-link:hover {
    background: #EEE;
    text-decoration: none;
  }
  .menu-icon {
    position: absolute;
    top: 0px;
    right: 15px;
    font-size: 25px;
  }
  #firstview {
    position: relative;
  }
  #firstview .overlay {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    color: #FFF;
  }
  #firstview .content {
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    height: 50%;
    margin: auto;
  }
  .registration-btn {
    width: 50%;
    padding: 8px 0px;
    margin: 0px auto;
    border-radius: 3px;
    background: #3b5998;
    color: #FFF;
    font-size: 20px;
    text-align: center;
    display: block;
  }
  .registration-btn:hover {
    color: #FFF;
    text-decoration: none;
  }
  @media screen and (max-width: 767px){
    .menu-item {
      display: none;
    }
  }
</style>

<div class="container-fluid">
  <header id="header">
    <div class="logo col-sm-4">
      <h1>Social Action Initiatives</h1>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" class="menu-link">MENU</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" class="menu-link">MENU</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" class="menu-link">MENU</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" class="menu-link">MENU</a>
    </div>
    <div class="visible-xs menu-icon">
      <i class="icon ion-navicon-round"></i>
    </div>
  </header>
  <div id="firstview" class="row">
    <img src="<%= asset_path("general/top.jpg") %>" width="100%" />
    <div class="overlay">
      <div class="content">
        <a href="/users/auth/facebook" class="registration-btn">Facebookで認証</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".menu-icon").click(function(){
    $(".menu-item").slideToggle();
  });
  $(".menu-link").click(function(e){
    e.preventDefault();
    $(".menu-item").slideUp();
  });
</script>