<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

<style type="text/css">
  h1 {
    margin: 0px;
    font-size: 18px;
    line-height: 2em;
  }
  h2 {
    margin: 0px;
    text-align: center;
  }
  section {
    padding: 10px 10px 30px;
  }
  section:nth-child(2n) {
    background: #212121;
    color: #FFF;
  }
  #header {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    background: rgba(255,255,255,.8);
    box-shadow: 0px 1px 3px rgba(0,0,0,.5);
    z-index: 3;
  }
  .menu-item {
    padding: 0px;
    text-align: center;
  }
  .menu-link {
    padding: 8px 0px;
    display: block;
    cursor: pointer;
    transition: all .5s 0s ease;
  }
  .menu-link:hover {
    background: #EEE;
    text-decoration: none;
  }
  .menu-icon {
    position: absolute;
    top: 0px;
    right: 15px;
    font-size: 25px;
  }
  #firstview {
    position: relative;
  }
  #firstview .overlay {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    color: #FFF;
  }
  #firstview .content {
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    height: 50%;
    margin: auto;
    text-align: center;
  }
  #firstview .description {
    margin: 0px;
    font-size: 18px;
    text-decoration: underline;
  }
  #firstview .title {
    margin: 0px;
    font-size: 60px;
  }
  #firstview .copy {
    margin: 0px;
    font-size: 36px;
  }
  .registration-btn {
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    width: 50%;
    padding: 8px 0px;
    margin: 0px auto;
    border: 1px solid #FFF;
    border-radius: 3px;
    background: #3b5998;
    color: #FFF;
    font-size: 24px;
    text-align: center;
    display: block;
  }
  .registration-btn:hover {
    color: #FFF;
    text-decoration: none;
  }
  @media screen and (max-width: 767px){
    .menu-item {
      display: none;
    }
    #firstview .content {
      top: 36px;
      height: 68%;
    }
    #firstview .title {
      font-size: 30px;
    }
    #firstview .copy {
      font-size: 16px;
    }
    #firstview .registration-btn {
      width: 70%;
      font-size: 18px;
    }
  }
</style>

<div class="container-fluid">
  <header id="header">
    <div class="logo col-sm-4">
      <h1>Social Action Initiatives</h1>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" data-link="function" class="menu-link">機能</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" data-link="feature" class="menu-link">特徴</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" data-link="security" class="menu-link">安心の理由</a>
    </div>
    <div class="col-sm-2 menu-item">
      <a href="#" data-link="vision" class="menu-link">理念</a>
    </div>
    <div class="visible-xs menu-icon">
      <i class="icon ion-navicon-round"></i>
    </div>
  </header>
  <div id="firstview" class="row">
    <img src="<%= asset_path("general/top.jpg") %>" width="100%" />
    <div class="overlay">
      <div class="content">
        <p class="description">2017年衆議院総選挙版</p>
        <p class="title">Social Action Initiatives</p>
        <p class="copy">「知らない」から「決める」までを<br />支援するプラットフォーム</p>
        <a href="/users/auth/facebook" class="registration-btn">Facebookで認証</a>
      </div>
    </div>
  </div>
  <section id="function" class="row">
    <div class="col-sm-12">
      <h2>機能</h2>
    </div>
  </section>
  <section id="feature" class="row">
    <div class="col-sm-12">
      <h2>特徴</h2>
    </div>
  </section>
  <section id="security" class="row">
    <div class="col-sm-12">
      <h2>安心の理由</h2>
    </div>
  </section>
  <section id="vision" class="row">
    <div class="col-sm-12">
      <h2>理念</h2>
    </div>
  </section>
</div>

<script type="text/javascript">
  $(".menu-icon").click(function(){
    $(".menu-item").slideToggle();
  });
  $(".menu-link").click(function(e){
    e.preventDefault();
    // 自動スクロール
    var position = $(document.getElementById(e.target.dataset.link)).offset();
    $("html,body").animate({ scrollTop: position.top }, 500);
    // メニューの開閉
    if(window.innerWidth <= 767){
      $(".menu-item").slideUp();
    }
  });
</script>