  #header {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    background: rgba(255,255,255,.8);
    box-shadow: 0px 1px 3px rgba(0,0,0,.5);
    z-index: 3;
  }
  #header .menu-item {
    padding: 0px;
    text-align: center;
  }
  #header .menu-link {
    padding: 8px 0px;
    display: block;
    cursor: pointer;
    transition: all .5s 0s ease;
  }
  #header .menu-link:hover {
    background: #EEE;
    text-decoration: none;
  }
  .menu-icon {
